			#{postcode}, #{addr1}, #{addr2}, #{loc_xy}, #{icon}, #{blockUserflag}, #{outUserflag});
	</insert>-->
	
	<!-- 데이터 삭제를 위한 기능 정의 -->
	<delete id="deleteItem"
	parameterType="study.spring.zigme.model.User">
	DELETE FROM user WHERE userNo = #{userNo};
	</delete>
	
	<!-- 데이터 갱신을 위한 기능 정의 -->
	<update id= "updateItem"
	parameterType="study.spring.zigme.model.User">
	UPDATE user SET  nickname=#{nickname}, email=#{email}, password=#{password}
			postcode=#{postcode}, addr1=#{addr1}, addr2=#{addr2}, loc_xy=#loc_xy}, icon = #{icon}
	WHERE userNo =#{userNo};
	</update>
	
	<!-- 전체 데이터 수 조회 -->
	<!-- 
		조건에 맞는 데이터수를 조회할려면 dynamic where절을 이용하면 된다.
	 -->
	 <select id="selectCountAll"
	 parameterType="study.spring.zigme.model.User"
	 resultType="int">
	 SELECT COUNT(*) FROM user
	 
	  <where>
           
        </where>
	 </select>
	 
	 <!-- 로그인 -->
	 <select id="login" parameterType="study.spring.zigme.model.User" resultMap="userMap" >
	 SELECT userNo, id,password
			FROM user
       <where> id = #{id} AND md5(#{password}) AND outUserflag='N'</where>
	 </select>

	 <!--  탈퇴 -->
	 <update id="outUpdate" parameterType="study.spring.zigme.model.User">
	 UPDATE user SET outUserflag = 'Y'<where>id=#{id};</where>
	 </update>
	 
	 <!--  아이디 중복 체크 -->	 
	 <select id="checkId" parameterType="study.spring.zigme.model.User" resultType="int">
	 SELECT COUNT(*) FROM user WHERE id=#{id}
	 </select>  
	 
	 <!-- 닉네임 중복 체크 -->
	 <select id="checkNick" parameterType="study.spring.zigme.model.User" resultType="int">
	 SELECT COUNT(*) FROM user WHERE nickname=#{nickname}
	 </select>  
	 
	 <!-- 아이디 찾기 -->
	 <select id="selectId" parameterType="study.spring.zigme.model.User" resultMap="userMap">
	 	SELECT userNo,id 
		FROM user
		<where>name=#{name} AND email=#{email} AND outUserflag='N'</where> 
	 </select>
	 
	 
</mapper>